{
    "name": "leo108/laravel_cas_server",
    "description": "A laravel package provides CAS server implementation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "leo108",
            "email": "leo108@qq.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-dom": "*",
        "illuminate/routing": "9.*|10.*",
        "illuminate/database": "9.*|10.*",
        "illuminate/http": "9.*|10.*",
        "illuminate/support": "9.*|10.*",
        "illuminate/validation": "9.*|10.*",
        "doctrine/dbal": "^3",
        "guzzlehttp/guzzle": "^7",
        "thecodingmachine/safe": "^2.5"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "7.*|8.*",
        "laravel/pint": "^1.10",
        "phpstan/phpstan": "^1.10",
        "thecodingmachine/phpstan-safe-rule": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/extension-installer": "^1.3",
        "nunomaduro/larastan": "^2.6",
        "spatie/phpunit-snapshot-assertions": "^5.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Leo108\\Cas\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leo108\\Cas\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CasServerServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "phpstan": "XDEBUG_MODE=off vendor/bin/phpstan analyse --memory-limit=4096M",
        "phpunit": "vendor/bin/phpunit",
        "pint": "vendor/bin/pint"
    }
}
